<div class="p-0 m-0 h-screen bg-gradient-to-r from-purple-700 to-blue-400 sm:bg-white md:grid md:grid-cols-2 md:px-auto">
  <!-- Primer div (mitad izquierda) -->
  <div class=" bg-gradient-to-r from-purple-600 to-blue-400 hidden md:block">
    <div class="hidden md:block fixed bottom-20 ms-5 mb-10">
      <h1 class="title text-gray-200 text-4xl">
        Bienvenido a <span>SEFI</span>
      </h1>
      <p class="light-text-form text-white text-sm lg:text-base">Iniciá sesión o creá una nueva cuenta con nosotros</p>
    </div>
  </div>
  <!-- Segundo div (mitad derecha) -->
  <div class="h-full md:bg-white">
    <!--Logo-->
    <div class="p-2 flex justify-center items-center md:hidden">
      <%= render "devise/shared/logo_white"%>
    </div>
    <!--Logo Negro-->
    <div class="p-4 m-2 justify-end items-center relative hidden md:flex md:m-8">
      <%= link_to root_path do %>
        <%= image_tag('sefi_black.png', class:"h-10")%>
      <% end %>
    </div>
    <!--form-->
    <div class="m-0 sm:m-5 md:m-10 lg:m-16">
      <!--Encabezado form-->
      <div class="p-4">
        <h2 class="title text-left text-2xl md:text-4xl md:mx-6"> Inicia sesión. </h2>
        <div class="flex items-center">
          <p class="light-text-form text-left ms-1 text-white md:text-gray-600 md:ms-6"> Aún no tenes cuenta </p>
          <%= link_to "Inicia Sesion", new_registration_path('user'), class:"font-bold ps-1" %>
        </div>
      </div>
      <!--Form-->
    </div>
  </div>
</div>
