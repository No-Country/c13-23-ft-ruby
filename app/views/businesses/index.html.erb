    <%= link_to "Nueva empresa", new_business_path, class:"" %>
  </div>
  <% @businesses.each do |business| %>
    <div class="flex w-full my-2 snap-center h-20 bg-white shadow rounded-lg p-4 border border-gray-300">
      <%= cl_image_tag business&.logo.key, width: 50, height: 50, radius:100, crop: :thumb, gravity: :face %>
